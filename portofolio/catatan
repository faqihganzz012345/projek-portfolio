     <!-- bg = background, text = teks -->
      <!-- colorname = kode warna bahasa inggris -->
      <!-- kecerahan angka dari 50 - 950 -->
       <!-- --bg-stale-100, bg-stale-400 -->
        <!-- ** text-blue-300, text-blue-900 -->
         <!-- custom class di tailwind menggunakan [] -->
          <!-- contoh: text-[33px] -->
    <h1 class="text-blue-900 text-6xl font-thin
     underline mb-5">
        Hello world!
    </h1>
    <!-- m = atur margin -->
     <!-- mb = atur margin bottom (bawah) -->
      <!-- p = atur padding -->
       <!-- pt = atur padding top (atas) -->
        <!-- mx/px = ukuran kiri kanan nya -->
         <!-- my/py = ukuran atas bawah nya -->
          <!-- rounded = border radius (sm,md,) -->
        <button class="rounded-full bg-sky-500 dark:bg-red-800 px-5 py-3 text-sm 
        font-semibold text-white hover:bg-violet-700 hover:text-black">
            save changes
